@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@model IEnumerable<CraftMake.Models.Product>;

    @{
        ViewBag.Title = "Cart";
    }

<div class="cart-table-area section-padding-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="cart-title mt-50">
                    <h2>Shopping Cart</h2>
                </div>
                <script> var x = 0; </script>
                <div class="cart-table clearfix">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                        @{
                            double sum = 0;
                        }
                        @foreach(var product in Model)
                        {
                            
                            <tr>
                                <td class="cart_product_img">
                                    <a href="#"><img src="@Url.Content(product.ImagePath)" alt="Product"></a>
                                </td>
                                <td class="cart_product_desc">
                                    <h5>@product.ProductName</h5>
                                </td>
                                <td class="price">
                                    <span>$@product.ProductPrice</span>
                                    <script>x = x + @product.ProductPrice;</script>
                                    @{
                                        sum = sum + @product.ProductPrice;
                                    }
                                </td>
                                <td class="qty">
                                    <div class="qty-btn d-flex">
                                        <p>Quantity</p>
                                        <div class="quantity">
                                            <div class="quantity">
                                                <span class="qty-minus" onclick="    var effect = document.getElementById('qty'); var qty = effect.value; document.getElementById('print').innerHTML="1000"; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                <input type="number" class="qty-text" id="qty" step="1" min="1" max="300" name="quantity" value="1">
                                                <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                            </div>
                                        </div>
                                        <div class="">
                                            <a asp-controller="Home" asp-action="RemoveItem" asp-route-id="@product.Id"><img src="/img//trash.svg" style="height: 25px; padding-left: 30px; margin-top: 7px;"></a>
                                        </div>
                                    </div>
                                </td>
                                
                            </tr>
                        }
                            @{
                                HttpContextAccessor.HttpContext.Session.SetString("Price", sum.ToString());
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="cart-summary ">
                    <h5>Cart Total</h5>
                    <ul class="summary-table">
                        <li><span>subtotal:</span> <span id="print">$@sum</span></li>
                        <li><span>delivery:</span> <span>Free</span></li>
                        <li><span>subtotal:</span> <span id="print">$@sum</span></li>
                    </ul>
                    <div class="cart-btn mt-100">
                        <a asp-controller="Home" asp-action="Checkout" class="btn amado-btn w-100">Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>