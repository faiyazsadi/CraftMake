@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@model CraftMake.Models.Product;

@{
    ViewBag.Title = "Product";
}

<div class="cart-table-area section-padding-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="checkout_details_area mt-50 clearfix">

                    <div class="cart-title">
                        <h2>Post Products to Sell</h2>
                    </div>

                    <form enctype="multipart/form-data" asp-controller="Product" asp-action="AddProduct" method="post">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <input asp-for="userEmail" type="email" class="form-control" id="email" placeholder="Email" value="">
                            </div>
                            <div class="col-12 mb-3">
                                <input asp-for="ProductName" type="text" class="form-control" id="product_name" value="" placeholder="Product Name" required>
                            </div>
                            <div class="col-12 mb-3">
                                <input asp-for="ProductPrice" type="number" class="form-control" id="product_price" value="" placeholder="Product Price" required>
                            </div>
                            <div class="col-12 mb-3">
                                <textarea type="text" asp-for="ProductDescription" class="form-control h-w-400" id="description" placeholder="Description about your product"></textarea>
                            </div>
                            <div class="col-12 mb-3">
                                <input asp-for="CoverPhoto" class="form-control w-100" id="customFile" placeholder="Choose File" required style="padding-left:0;">
                            </div>
                        </div>
                        @*<input type="submit" value="Submit"/>*@
                        <div class="amado-btn-group mt-30 mb-10">
                            <input type="submit" value="Add Product" class="btn amado-btn mb-15">
                        </div>
                    </form>
                    @if(HttpContextAccessor.HttpContext.Session.GetInt32("itemPosted") == 1)
                    {
                        <div class="alert alert-success" role="alert">
                            Your Product is submitted for approval!
                        </div>
                        HttpContextAccessor.HttpContext.Session.SetInt32("itemPosted", 0);
                    }
                </div>
            </div>
